            <artifactId>vaadin-menu-bar-flow</artifactId>
        </dependency>

        <!-- Mark commercial components optional, so they don't leak into the -->
        <!-- project if only "vaadin-core" is used -->
        <dependency>
            <groupId>com.vaadin</groupId>
            <artifactId>vaadin-board-flow</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.vaadin</groupId>
            <artifactId>vaadin-charts-flow</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.vaadin</groupId>
            <artifactId>vaadin-cookie-consent-flow</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.vaadin</groupId>
            <artifactId>vaadin-crud-flow</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.vaadin</groupId>
            <artifactId>vaadin-grid-pro-flow</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.vaadin</groupId>
            <artifactId>vaadin-map-flow</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.vaadin</groupId>
            <artifactId>vaadin-rich-text-editor-flow</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.vaadin</groupId>
            <artifactId>collaboration-engine</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.vaadin</groupId>
            <artifactId>vaadin-spreadsheet-flow</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>2.0.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>2.0.0</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.gmaven</groupId>
                <artifactId>groovy-maven-plugin</artifactId>
                <version>2.1.1</version>
                <executions>
                    <execution>
                        <id>versions-json-property</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <source>
                                def versionsJsonFile = new File(project.file, '../../versions.json').getCanonicalFile()
                                def versions = new groovy.json.JsonSlurper().parse(versionsJsonFile)

                                def vaadinBundle = versions.bundles.vaadin
                                project.properties.setProperty("bundles.version", vaadinBundle.jsVersion)

                                def core = versions.core
                                project.properties.setProperty("component.base.version", core["component-base"].jsVersion)
                                project.properties.setProperty("field.base.version", core["field-base"].jsVersion)
                                project.properties.setProperty("input.container.version", core["input-container"].jsVersion)
                                project.properties.setProperty("lit.renderer.version", core["lit-renderer"].jsVersion)
                                project.properties.setProperty("overlay.version", core["overlay"].jsVersion)
                                project.properties.setProperty("devmode.detector.version", core["vaadin-development-mode-detector"].jsVersion)
                                project.properties.setProperty("statistics.version", core["vaadin-usage-statistics"].jsVersion)
                            </source>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.google.code.maven-replacer-plugin</groupId>
                <artifactId>replacer</artifactId>
                <version>1.5.1</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>replace</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <basedir>${project.basedir}</basedir>
                    <includes>
                        <include>src/main/java/com/vaadin/devbundle/FakeAppConf.java</include>
                    </includes>
                    <replacements>
                        <replacement>
                            <token>%bundles.version%</token>
                            <value>${bundles.version}</value>
                        </replacement>
                        <replacement>
                            <token>%component.base.version%</token>
                            <value>${component.base.version}</value>
                        </replacement>

                        <replacement>
                            <token>%field.base.version%</token>
                            <value>${field.base.version}</value>
                        </replacement>

                        <replacement>
                            <token>%input.container.version%</token>
                            <value>${input.container.version}</value>
                        </replacement>

                        <replacement>
                            <token>%lit.renderer.version%</token>
                            <value>${lit.renderer.version}</value>
                        </replacement>

                        <replacement>
                            <token>%overlay.version%</token>
                            <value>${overlay.version}</value>
                        </replacement>

                        <replacement>
                            <token>%devmode.detector.version%</token>
                            <value>${devmode.detector.version}</value>
                        </replacement>

                        <replacement>
                            <token>%statistics.version%</token>
                            <value>${statistics.version}</value>
                        </replacement>

                    </replacements>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.3.0</version>
                <configuration>
                    <excludes>
                        <exclude>**/*Fake*</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.vaadin</groupId>
                <artifactId>flow-dev-bundle-plugin</artifactId>
                <version>${flow.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>build-dev-bundle</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.0.2</version>
                <executions>
                    <execution>
                        <id>copy-dev-bundle-to-target</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.outputDirectory}/vaadin-dev-bundle</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/dev-bundle</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.2.0</version>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>${project.basedir}/src/main/dev-bundle</directory>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>

        </plugins>
    </build>
</project>
